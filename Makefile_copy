
APP = "pong"

copy_build:
	export LD_LIBRARY_PATH=/usr/local/SFML/lib
	g++ -std=c++17 -Ofast -o $(APP) $(APP).cpp Actors/ball.cpp Actors/paddle.cpp Actors/wall.cpp Actors/score.cpp Game/game.cpp -I/usr/local/SFML/include -L/usr/local/SFML/lib -lsfml-graphics -lsfml-window -lsfml-system -lfreetype

copy_run:
	./$(APP)

copy_all:
	make build
	make run

copy_clean:
	rm $(APP)

.PHONY: copy_build copy_run copy_clean copy_all